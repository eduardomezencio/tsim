{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: tsim (select map)",
            "type": "python",
            "request": "launch",
            "module": "tsim",
            "console": "integratedTerminal",
            "args": ["data/${input:mapName}.osm"]
        },
        {
            "name": "Python: tsim (last map)",
            "type": "python",
            "request": "launch",
            "module": "tsim",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "Python: osm_reader",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/osm_reader.py",
            "console": "integratedTerminal",
            "args": ["data/${input:mapName}.osm"],
            "env": { "PYTHONPATH": "${workspaceFolder}" }
        },
        {
            "name": "Python: osm_reader (multiprocessing)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/osm_reader.py",
            "console": "integratedTerminal",
            "args": ["data/${input:mapName}.osm", "-m"],
            "env": { "PYTHONPATH": "${workspaceFolder}" }
        },
        {
            "name": "Python: osm_cleaner",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/osm_cleaner.py",
            "console": "integratedTerminal",
            "args": ["data/${input:mapName}.osm", "data/${input:mapName}.osm"],
            "env": { "PYTHONPATH": "${workspaceFolder}" }
        },
        {
            "name": "Python: Attach using Process Id",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "inputs": [
        {
            "id": "mapName",
            "type": "promptString",
            "default": "",
            "description": "Name of the map to load"
        }
    ]
}