{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: tsim module",
            "type": "python",
            "request": "launch",
            "module": "tsim",
            "console": "integratedTerminal",
            "args": ["data/formiga.osm"]
        },
        {
            "name": "Python: osm_reader",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/osm_reader.py",
            "console": "integratedTerminal",
            "args": ["data/formiga.osm"],
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "Python: custom_reader",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/custom_reader.py",
            "console": "integratedTerminal",
            "args": ["data/custom_test"],
            "env": {"PYTHONPATH": "${workspaceFolder}"}
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}